<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <% flash_class = name.to_s == 'alert' ? 'danger' : 'success' %>
    <%= content_tag :div, :class => "alert alert-#{flash_class} alert-block" do %>
      <button type="button" class="close" data-dismiss="alert">x</button>
      <%= "#{msg}" %>
    <% end %>
  <% end %>
<% end %>