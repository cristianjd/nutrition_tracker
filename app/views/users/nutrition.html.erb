<div class="page-header">
  <h1>Daily Nutrition <small><%= Date.strptime(params[:date], '%m-%d-%Y').to_formatted_s(:long_ordinal) %></small></h1>
  <%= form_tag(nutrition_path, :method => 'get') do %>
    <div class="form-group row">
      <div class="col-xs-2">
        <div class="input-group date" id="calendar" data-date="" data-date-format="mm-dd-yyyy">
          <%= text_field_tag "date", params[:date], :class => "form-control", :readonly => true %>
          <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
        </div>
      </div>
      <%= submit_tag "Refresh", :name => nil, :id => 'refresh_date', :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<% if @data %>
  <%= render 'data' %>
  <%= render 'chart' %>
<% end %>
<br />
